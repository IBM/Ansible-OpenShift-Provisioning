#!/usr/local/bin/expect -f

set force_conservative 0
if {$force_conservative} {
	set send_slow {1 .1}
	proc send {ignore arg} {
		sleep .1
		exp_send -s -- $arg
	}
}

set timeout 20
spawn ssh-copy-id -f -o StrictHostKeyChecking=no -i {{ path_to_key_pair }} {{ ssh_target[1] }}@{{ ssh_target[0] }}
expect {
	"password: " {
		send -- "{{ ssh_target[2] }}\r"
		expect eof
	}
	"Number of key(s) added:" {}
}
